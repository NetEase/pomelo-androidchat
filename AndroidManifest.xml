<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="netease.pomelo.chat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name="@string/app"
        android:allowBackup="true"
        android:icon="@drawable/pomelo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="netease.pomelo.chat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="netease.pomelo.chat.UsersActivity" >
        </activity>
        <activity android:name="netease.pomelo.chat.ChatActivity" >
        </activity>
    </application>

</manifest>